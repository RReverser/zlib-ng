CC=
CFLAGS=
SFLAGS=
INCLUDES=
SUFFIX=

AVX2FLAG=-mavx2
SSE2FLAG=-msse2
SSE3FLAG=-msse3
SSSE3FLAG=-mssse3
SSE4FLAG=-msse4
PCLMULFLAG=-mpclmul

SRCDIR=.
SRCTOP=../..
TOPDIR=$(SRCTOP)

all: x86.o x86.lo  adler32_sse3.o adler32_sse3.lo adler32_ssse3.o adler32_ssse3.lo adler32_sse4.o adler32_sse4.lo adler32_x86.o adler32_x86.lo adler32_xop.o adler32_xop.lo deflate_quick.o deflate_quick.lo insert_string_sse.o insert_string_sse.lo crc_folding.o crc_folding.lo slide_avx.o slide_avx.lo slide_sse.o slide_sse.lo

x86.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c -o $@ $(SRCDIR)/x86.c

x86.lo:
	$(CC) $(SFLAGS) $(INCLUDES) -c -o $@ $(SRCDIR)/x86.c

adler32_sse3.o: $(SRCDIR)/adler32_sse3.c
	$(CC) $(CFLAGS) $(SSE3FLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/adler32_sse3.c

adler32_sse3.lo: $(SRCDIR)/adler32_sse3.c
	$(CC) $(SFLAGS) $(SSE3FLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/adler32_sse3.c

adler32_ssse3.o: $(SRCDIR)/adler32_ssse3.c
	$(CC) $(CFLAGS) $(SSSE3FLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/adler32_ssse3.c

adler32_ssse3.lo: $(SRCDIR)/adler32_ssse3.c
	$(CC) $(SFLAGS) $(SSSE3FLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/adler32_ssse3.c

adler32_sse4.o: $(SRCDIR)/adler32_sse4.c
	$(CC) $(CFLAGS) $(SSE4FLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/adler32_sse4.c

adler32_sse4.lo: $(SRCDIR)/adler32_sse4.c
	$(CC) $(SFLAGS) $(SSE4FLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/adler32_sse4.c

adler32_x86.o: $(SRCDIR)/adler32_x86.c
	$(CC) $(CFLAGS) $(INCLUDES) -c -o $@ $(SRCDIR)/adler32_x86.c

adler32_x86.lo: $(SRCDIR)/adler32_x86.c
	$(CC) $(SFLAGS) $(INCLUDES) -c -o $@ $(SRCDIR)/adler32_x86.c

adler32_xop.o: $(SRCDIR)/adler32_xop.c
	$(CC) $(CFLAGS) $(XOPFLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/adler32_xop.c

adler32_xop.lo: $(SRCDIR)/adler32_xop.c
	$(CC) $(SFLAGS) $(XOPFLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/adler32_xop.c

deflate_quick.o:
	$(CC) $(CFLAGS) $(SSE4FLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/deflate_quick.c

deflate_quick.lo:
	$(CC) $(SFLAGS) $(SSE4FLAG) -DPIC $(INCLUDES) -c -o $@ $(SRCDIR)/deflate_quick.c

insert_string_sse.o:
	$(CC) $(CFLAGS) $(SSE4FLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/insert_string_sse.c

insert_string_sse.lo:
	$(CC) $(SFLAGS) $(SSE4FLAG) -DPIC $(INCLUDES) -c -o $@ $(SRCDIR)/insert_string_sse.c

crc_folding.o:
	$(CC) $(CFLAGS) $(PCLMULFLAG) $(SSE4FLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/crc_folding.c

crc_folding.lo:
	$(CC) $(SFLAGS) $(PCLMULFLAG) $(SSE4FLAG) -DPIC $(INCLUDES) -c -o $@ $(SRCDIR)/crc_folding.c

slide_avx.o:
	$(CC) $(CFLAGS) $(AVX2FLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/slide_avx.c

slide_avx.lo:
	$(CC) $(SFLAGS) $(AVX2FLAG) -DPIC $(INCLUDES) -c -o $@ $(SRCDIR)/slide_avx.c

slide_sse.o:
	$(CC) $(CFLAGS) $(SSE2FLAG) $(INCLUDES) -c -o $@ $(SRCDIR)/slide_sse.c

slide_sse.lo:
	$(CC) $(SFLAGS) $(SSE2FLAG) -DPIC $(INCLUDES) -c -o $@ $(SRCDIR)/slide_sse.c

mostlyclean: clean
clean:
	rm -f *.o *.lo *~
	rm -rf objs
	rm -f *.gcda *.gcno *.gcov

distclean:
	rm -f Makefile
